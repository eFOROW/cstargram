<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:padding="1.5dp"
                android:background="@drawable/story_gradient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/comment_item_photo_imageView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="top"
                    android:clipToOutline="true"
                    android:background="@drawable/round_border"
                    android:src="@drawable/cstar_story" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="left"
                android:gravity="left"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/comment_item_nickname_textView"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="닉네임"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/comment_item_time_textView"
                        android:text=" • 0일전"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/comment_item_message_textView"
                    android:textColor="@color/black"
                    android:paddingRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:text="댓글 내용"
                    android:textSize="19dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>