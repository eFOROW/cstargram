<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/cstar_story"
                    android:layout_width="45dp"
                    android:layout_height="45dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_nickname_textView"
                        android:layout_marginLeft="10dp"
                        android:text="닉네임"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_place_textView"
                        android:layout_marginLeft="10dp"
                        android:text="장소"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:gravity="right"
                        android:src="@drawable/cstar_dot_icon"
                        android:layout_width="45dp"
                        android:layout_height="45dp"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/item_imageView"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="8dp"
                    android:src="@drawable/cstar_heart_icon"
                    android:layout_width="27dp"
                    android:layout_height="27dp"/>

                <ImageView
                    android:layout_margin="8dp"
                    android:src="@drawable/cstar_thread_icon"
                    android:layout_width="27dp"
                    android:layout_height="27dp"/>

                <ImageView
                    android:layout_margin="8dp"
                    android:src="@drawable/cstar_send_icon"
                    android:layout_width="27dp"
                    android:layout_height="27dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/itme_foot_nickname_textView"
                    android:textColor="@color/black"
                    android:text="닉네임 - "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/itme_foot_description_textView"
                    android:textColor="@color/black"
                    android:text="내용"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/item_comment_count_textView"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="댓글 N개 모두 보기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/cstar_story" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="댓글추가..."
                    android:textSize="10dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>