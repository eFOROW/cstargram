<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 상단바 -->
        <LinearLayout
            android:gravity="left"
            android:orientation="horizontal"
            android:id="@+id/main_titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Cstargram"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:layout_margin="10dp"
                android:textSize="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="10dp"
                    android:src="@drawable/cstar_heart_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>

                <ImageView
                    android:id="@+id/main_dm_imageView"
                    android:layout_margin="10dp"
                    android:src="@drawable/cstar_send_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>

            </LinearLayout>



        </LinearLayout>

        <!-- 스토리 nav -->
        <HorizontalScrollView
            android:scrollbars="none"
            android:id="@+id/main_story_layout"
            android:layout_below="@+id/main_titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="13dp"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:src="@drawable/cstar_story_my" />

                    <TextView
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:text="내 스토리"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="8dp"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:src="@drawable/cstar_story" />

                    <TextView
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:text="닉네임"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="8dp"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:src="@drawable/cstar_story" />

                    <TextView
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:text="닉네임"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="8dp"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:src="@drawable/cstar_story" />

                    <TextView
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:text="닉네임"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="8dp"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:src="@drawable/cstar_story" />

                    <TextView
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:text="닉네임"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <View
            android:id="@+id/main_navline"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/main_story_layout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D5D5D5"/>

        <!-- 메인 피드 -->
        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/main_navline"
            android:id="@+id/main_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- 하단 탭바 -->

    </LinearLayout>



</ScrollView>